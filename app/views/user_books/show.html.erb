<div class="book-detail">
  <div class="row mt-4">
    <div class="col-3"></div>
    <div class="col-6">
      <div class="row">
        <div class="col-4" style="max-height: 400px;">
          <%= image_tag(@book.photo, :style => 'height:100%; width:auto;') %>
        </div>
        <div class="col-8">
          <h2><%= @book.name %></h2>
          <p>by <%=  @book.authors.pluck(:name).join(", ") %></p>

          <div class="mt-3 mb-3">
            Rating: <b><%= @reviews.average(:rating) %> (by <%= @reviews.length %>)</b>
          </div>

          <div class="description">
            <%= @book.description %>
          </div>
        </div>
      </div>

      <div class="book-review">
        <div class="review-form mt-5">
          <% if logged_in? %>
            <%= render "user_reviews/form" %>
          <% else %>
            <h5>Log in to write a review!</h5>
          <% end %>
        </div>

        <div class="review-list">
          <ul>
            <%= render partial: "user_reviews/review", collection: @reviews %>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-3"></div>
  </div>
</div>
